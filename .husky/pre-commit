#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Type checking
echo "ğŸ“ Checking TypeScript types..."
yarn type-check

# ESLint checking
echo "ğŸ§¹ Running ESLint..."
yarn lint

# Check for large files (>100 lines) - exclude generated files
echo "ğŸ“ Checking file sizes..."
find src -name "*.ts" -o -name "*.tsx" | grep -v "generated" | xargs wc -l | awk '$1 > 100 {print "âŒ File too large: " $2 " (" $1 " lines)"; exit 1}' 

# Check for img tags that should use Next.js Image
echo "ğŸ–¼ï¸ Checking for img tags..."
if grep -r "<img" src/ --include="*.tsx" --include="*.ts" --exclude-dir=generated 2>/dev/null; then
  echo "âŒ Found <img> tags! Use Next.js Image component instead."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
